<div class="body">
<% if @bodies.length == 0 -%>
	<p>No logged body measurements</p>
<% else -%>
	<table border="0" cellpadding="0" cellspacing="0">
		<tr>
			<th></th>
			<th>Date of Weigh-in</th>
			<th>Weight</th>
		</tr>
<% @bodies.each { |@body| %>
<%= render :partial => "body" %>
<% } %>
	</table>
<% end -%>
<%= oval_button_to "New", :action => "new" %>
</div>
