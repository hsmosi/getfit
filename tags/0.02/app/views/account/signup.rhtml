	<%= stylesheet_link_tag 'login', :media => "all" %>
</head>
<body>
	<% form_for :user do |f| -%>
	<div class="group">
		<div class="outline">
			<div class="block">
				<div class="title">GetFit</div>
					<%= error_messages_for :user %>
					Username</br>
					<%= f.text_field :login, :class => "text" %>
					Email<br/>
					<%= f.text_field :email, :class => "text" %>
					Password</label><br/>
					<%= f.password_field :password, :class => "text" %>
					Confirm Password<br/>
					<%= f.password_field :password_confirmation, :class => "text" %>
					<div class="right"><%= submit_tag 'Sign up', :class => "button" %></div>
				</div>
				<div class="register">
					<%= link_to "Return to login >>", { :action => "login" }%><br/>
				</div>
			</div>
		</div>
	</div>
	<% end -%>
</body>
</html>
